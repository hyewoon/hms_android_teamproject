<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mcv_selectionColor="@color/second_color"
        app:mcv_showOtherDates="out_of_range"
        app:mcv_dateTextAppearance="@style/calendar_datetext"
        app:mcv_headerTextAppearance="@style/calendar_headerext"
        app:mcv_weekDayTextAppearance="@style/calendar_weekdaytext"/>

</LinearLayout>