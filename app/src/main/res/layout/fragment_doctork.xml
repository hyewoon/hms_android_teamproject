<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reception.appointment.DoctorkFragment"
    android:orientation="vertical">

    <LinearLayout
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <Spinner
            android:paddingLeft="10dp"
            android:id="@+id/spinner_deparatment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:spinnerMode="dropdown">
        </Spinner>
    </LinearLayout>
<LinearLayout
    android:visibility="gone"
    android:id="@+id/ll_docotor_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:textSize="16dp"
        android:id="@+id/item1"
        android:gravity="center"
        android:text="1번"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="16dp"
        android:layout_marginTop="5dp"
        android:id="@+id/item2"
        android:gravity="center"
        android:text="2번"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="16dp"
        android:layout_marginTop="5dp"
        android:id="@+id/item3"
        android:gravity="center"
        android:text="3번"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="16dp"
        android:layout_marginTop="5dp"
        android:id="@+id/item4"
        android:gravity="center"
        android:text="4번"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>
     <androidx.recyclerview.widget.RecyclerView
         android:id="@+id/recv_doctor_name"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/ll_confirm_date"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@color/second_color"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_show_date"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="날짜를 선택하세요"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginLeft="20dp"
            android:src="@drawable/icon_calendar_multiselect"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:tint="@color/white" />

    </LinearLayout>
</LinearLayout>